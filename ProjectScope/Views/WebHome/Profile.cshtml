@using ProjectScope.Entity
@{
    Layout = "_layout";
}
@model Student;
<style>
  

    .profile-container {
        width:auto; 
        margin: 20px;
        background: linear-gradient(to top, #09203f 0%, #537895 100%);
        padding: 40px 300px 40px 300px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);

    }

    .profile-picture {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    img{
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius:12px;
    }   
    .profile-info {
        margin-bottom: 20px;
    }

        .profile-info h1,
        .profile-info p {
            margin: 10px 0px 0px 200px;
            color:white;
            font-family: "Lucida Console", "Courier New", monospace;
        }
        img{
            margin-left:33%;
            width:250px;
        }
    p {
        color: white;
    }

    .btn{
        background-color:whitesmoke;
        color:black;
    }

    .form-floating button{
        margin-left:200px;
    }
</style>

<div class="profile-container">
    <img src="/images/Avatar/@Model.Avatar" />
    <div class="profile-info">
        <h1>@Model.FirstName @Model.LastName</h1>
        <p>Gender: @Model.Gender</p>
        <p>Date of Birth: @Model.DateofBirth.ToString("MMMM dd, yyyy")</p>
        <p>Contact Number: @Model.Phone</p>
        <p>Country: @Model.Country</p>
        <p>State: @Model.State</p>
        <p>City: @Model.City</p>
        <p>Hobbies: @Model.Hobbies</p>
    </div>
    <form action="/WebHome/EditProfile" method="get">
        <div class="form-floating mb-4">
            <button class="btn " type="submit">Edit Profile</button>
        </div>
    </form>
</div>
