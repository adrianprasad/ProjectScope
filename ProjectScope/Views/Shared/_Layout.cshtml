<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Scope India</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjectScope.styles.css" asp-append-version="true" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg  ">
        <div class="container">
            <a class="navbar-brand navbar-brand-center" asp-area="" asp-controller="WebHome" asp-action="Index">
                <img src="~/images/Logo.jpeg" alt="Logo" style="width: 100px;"> 
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse navbar-right-align" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">
                     @if ((string)ViewData["Nav"] == "Navbar")
                    {
                        <li class="nav-item ">
                            <a class="nav-link" asp-area="" asp-controller="WebHome" asp-action="StudentDashboard">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Profile
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" asp-area="" asp-controller="WebHome" asp-action="Profile">Profile</a>
                                <a class="dropdown-item" asp-area="" asp-controller="WebHome" asp-action="ChangePassword">Change Password</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="WebHome" asp-action="Logout">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="@(ViewContext.RouteData.Values["controller"].ToString() == "WebHome" && ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active" : "nav-item")">
                            <a class="nav-link" asp-area="" asp-controller="WebHome" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="WebHome" asp-action="Aboutus">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="WebHome" asp-action="Contact">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="WebHome" asp-action="Registration">Registration</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="WebHome" asp-action="Studentlogin">Login</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 Scope India  <a asp-area="" asp-controller="WebHome" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @section Scripts {
        @await Html.PartialAsync("~/Views/Shared/_ValidationScriptsPartial.cshtml");
    }
</body>
</html>
